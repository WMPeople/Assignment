<?xml version="1.0" encoding="UTF-8" ?>
 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.worksmobile.Assignment.Mapper.BoardMapper">
	<select id="boardList" resultType="com.worksmobile.Assignment.Domain.BoardDTO">
        SELECT board_id,subject,content,created,fileName,fileSize
        FROM board;
    </select>
        
    <select id="viewDetail" parameterType="int" resultType="com.worksmobile.Assignment.Domain.BoardDTO" >
    	select board_id,subject,content,created,fileName,fileSize,attachment
    	from board
    	where board_id = #{board_id};
    </select>
    
    
    <insert id="boardCreate" parameterType="com.worksmobile.Assignment.Domain.BoardDTO"
     useGeneratedKeys="true" keyProperty="id">
        INSERT INTO board
        (subject,content,created,attachment,fileName,fileSize)
        VALUES (#{subject},#{content},CURRENT_TIMESTAMP,#{attachment,jdbcType=BLOB},#{fileName},#{fileSize});
    </insert>
    
    <delete id="boardDelete" parameterType="int">
        DELETE FROM board 
        WHERE board_id = #{board_id};
       
    </delete>
    
    <update id="boardUpdate" parameterType="com.worksmobile.Assignment.Domain.BoardDTO">
        UPDATE board 
        set 
        subject = #{subject},
        content = #{content},
        created = CURRENT_TIMESTAMP,
        attachment = #{attachment,jdbcType=BLOB},
        fileName =#{fileName},
        fileSize =#{fileSize}
        where board_id = #{board_id};
    </update>
    
    <select id="boardFileDownload" parameterType="int" resultType="com.worksmobile.Assignment.Domain.BoardDTO">
        SELECT attachment,fileName,fileSize
        FROM board
        where board_id = #{board_id};
    </select>
    
    
</mapper>